<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色：这里设置背景透明 -->
    <solid android:color="#ffffff" />
    <!-- 边框的颜色 ：不能和窗口背景色一样-->
    <stroke
        android:width="0dp"
        android:color="#9d9d9d" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="0dp" />

    <!-- padding：内容与边界的间隔 -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

</shape>